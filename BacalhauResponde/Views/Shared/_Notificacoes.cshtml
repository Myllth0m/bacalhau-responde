@using System.Text.Json

@if (TempData["sucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
        <em class="mdi mdi-check-circle" aria-hidden="true"></em>
        @TempData["sucesso"]
    </div>
}

@if (TempData["erros"] != null)
{
    var erros = JsonSerializer.Deserialize<List<string>>(TempData["erros"].ToString());
    foreach (var erro in erros)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            <em class="mdi mdi-close-circle" aria-hidden="true"></em>
            @erro
        </div>
    }
}

@if (TempData["atencao"] != null)
{
    <div class="alert alert-warning" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
        <em class="fa fa-exclamation-triangle" aria-hidden="true"></em>
        @TempData["atencao"]
    </div>
}

@if (TempData["informacao"] != null)
{
    <div class="alert alert-primary" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
        <em class="fa fa-exclamation-circle" aria-hidden="true"></em>
        @TempData["informacao"]
    </div>
}