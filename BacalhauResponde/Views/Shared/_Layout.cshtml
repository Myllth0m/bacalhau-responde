<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Bacalhau Responde</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bacalhau Responde</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <nav class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3 py-0 text-danger" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-lg bi-house-door"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 py-0 text-danger" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-lg bi-newspaper"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 py-0 text-danger" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-lg bi-people"></i>
                            </a>
                        </li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav float-right align-items-center">
                            <li class="nav-item">
                                <button type="button" class="btn btn-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#modal-cadastrar-pergunta" asp-controller="Pergunta" asp-action="Cadastrar">
                                    Fazer uma pergunta
                                </button>
                            </li>
                            <li class="nav-item px-3">
                                <span class="nav-link text-danger">
                                    <i class="bi bi-person-circle"></i> Olá, @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger p-0" asp-controller="Autenticacao" asp-action="Sair">
                                    <i class="bi bi-lg bi-box-arrow-in-right"></i>
                                </a>
                            </li>
                        </ul>
                    }
                </nav>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_Notificacoes" />
        <main role="main" class="pb-3">
            @RenderBody()
            <partial name="../Pergunta/_Cadastrar.cshtml" model="@ViewBag.PerguntaViewModel" />
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Bacalhau Responde
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
