@model BacalhauResponde.Models.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Criar cadastro";
    Layout = "_LayoutPublico";
}

<div class="row justify-content-center">
    <div class="card mt-4" style="width: 25rem">
        <div class="card-body">
            <h3 class="card-title text-center py-4">Criar cadastro</h3>
            <form asp-action="Cadastrar">
                <div class="form-floating mb-3">
                    <input asp-for="Nome" class="form-control" placeholder="Seu nome completo" autocomplete="off" autofocus />
                    <label asp-for="Nome" class="control-label fw-bold text-muted"></label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Seu e-mail" autocomplete="off" />
                    <label asp-for="Email" class="control-label fw-bold text-muted"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Ocupacao" class="form-control" placeholder="Sua formação/ocupação" autocomplete="off" />
                    <label asp-for="Ocupacao" class="control-label fw-bold text-muted"></label>
                    <span asp-validation-for="Ocupacao" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Senha" class="form-control" placeholder="Sua senha (no mínimo 6 digitos)" />
                    <label asp-for="Senha" class="control-label fw-bold text-muted"></label>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ConfirmarSenha" class="form-control" placeholder="Confirme sua senha" />
                    <label asp-for="ConfirmarSenha" class="control-label fw-bold text-muted"></label>
                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between pt-2">
                    <a class="nav-link align-self-center text-black-50 p-0" asp-action="Entrar" asp-controller="Autenticacao">
                        Já possui conta?
                    </a>
                    <button type="submit" class="btn btn-sm btn-primary rounded-pill">
                        Criar cadastro
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
