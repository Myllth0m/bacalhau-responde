@model BacalhauResponde.Models.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Criar cadastro";
    Layout = "_LayoutPublico";
}

<div class="row justify-content-center">
    <div class="card mt-4" style="width: 30rem">
        <div class="card-body">
            <h3 class="card-title text-center pt-4 pb-2">Criar cadastro</h3>
            <form asp-action="Cadastrar">
                <div class="pb-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Você pode abreviar se quiser" autofocus />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="pb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Vai ser seu e-mail de login" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="pb-3">
                    <label asp-for="Ocupacao" class="control-label"></label>
                    <input asp-for="Ocupacao" class="form-control" placeholder="O que melhor descreve sua ocupação" />
                    <span asp-validation-for="Ocupacao" class="text-danger"></span>
                </div>
                <div class="pb-3">
                    <label asp-for="Senha" class="control-label"></label>
                    <span class="fst-italic text-black-50">(no mínimo 6 digitos)</span>
                    <input asp-for="Senha" class="form-control" placeholder="******" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="pb-3">
                    <label asp-for="ConfirmarSenha" class="control-label"></label>
                    <input asp-for="ConfirmarSenha" class="form-control" placeholder="******" />
                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between pt-2">
                    <a class="nav-link align-self-center text-black-50 p-0" asp-action="Entrar" asp-controller="Autenticacao">
                        Já possui conta?
                    </a>
                    <button type="submit" class="btn btn-sm btn-primary rounded-pill">
                        Criar cadastro
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
