@model BacalhauResponde.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutPublico";
}

<div class="row justify-content-center">
    <div class="card mt-4" style="width: 30rem">
        <div class="card-body">
            <h3 class="card-title text-center pt-4 pb-2">Bacalhau Responde</h3>
            <p class="card-subtitle fst-italic text-center pb-4">Um lugar para aprender mais sobre o mundo da tecnologia</p>
            <form asp-action="Entrar">
                <div class="pb-2">
                    <label asp-for="Email" class="control-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="O seu e-mail" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="pb-2">
                    <label asp-for="Senha" class="control-label fw-bold"></label>
                    <input asp-for="Senha" class="form-control" placeholder="O sua senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between pt-2">
                    <a class="nav-link align-self-center text-black-50 p-0" asp-action="RecuperarSenha">
                        Esqueceu sua senha?
                    </a>
                    <button type="submit" class="btn btn-sm btn-primary">
                        Fazer login
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
