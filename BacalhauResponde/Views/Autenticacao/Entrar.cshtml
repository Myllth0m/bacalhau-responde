@model BacalhauResponde.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutPublico";
}

<div class="row justify-content-center">
    <div class="card mt-4" style="width: 25rem">
        <div class="card-body">
            <h3 class="card-title text-center pt-4 pb-2">Bacalhau Responde</h3>
            <p class="card-subtitle fst-italic text-center pb-4">Um lugar para aprender mais sobre tecnologia</p>
            <partial name="_Notificacoes" />
            <form asp-action="Entrar">
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="O seu e-mail" autocomplete="off" autofocus />
                    <label asp-for="Email" class="control-label fw-bold text-muted"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Senha" class="form-control" placeholder="A sua senha" />
                    <label asp-for="Senha" class="control-label fw-bold text-muted"></label>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between pt-2">
                    <a class="nav-link align-self-center text-black-50 p-0" asp-action="RecuperarSenha">
                        Esqueceu sua senha?
                    </a>
                    <button type="submit" class="btn btn-sm btn-primary rounded-pill">
                        Fazer login
                    </button>
                </div>
            </form>
            <div class="form-text mt-3">
                <a class="nav-link btn btn-light" asp-action="Cadastrar" asp-controller="Usuario">
                    Você pode criar uma conta clicando aqui
                </a>
            </div>
        </div>
    </div>
</div>
